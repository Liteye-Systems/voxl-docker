#!/bin/bash
# ModalAI bash formatting
# /etc/profile: system-wide .profile file for the Bourne shell (sh(1))
# and Bourne compatible shells (bash(1), ksh(1), ash(1), ...).

EDITOR="vi"			# needed for packages like cron, git-commit
test -z "$TERM" && TERM="vt100"	# Basic terminal capab. For screen etc.

if [ ! -e /etc/localtime -a ! -e /etc/TZ ]; then
	TZ="UTC"		# Time Zone. Look at http://theory.uwinnipeg.ca/gnu/glibc/libc_303.html
				# for an explanation of how to set this to your local timezone.
	export TZ
fi


RESET_ALL="\033[0m"
SET_BOLD="\033[1m"
SET_DIM="\033[2m"
SET_UNDERLINE="\033[4m"
SET_BLINK="\033[5m"
SET_INVERT="\033[7m"
SET_HIDDEN="\033[8m"
RESET_BOLD="\033[21m"
RESET_DIM="\033[22m"
RESET_UNDERLINE="\033[24m"
RESET_BLINK="\033[25m"
RESET_INVERT="\033[27m"
RESET_HIDDEN="\033[28m"
CLR_RESET="\033[39m"
CLR_BLK="\033[30m"
CLR_RED="\033[31m"
CLR_GRN="\033[32m"
CLR_YLW="\033[33m"
CLR_BLU="\033[34m"
CLR_MAG="\033[35m"
CLR_CYN="\033[36m"
CLR_LIT_GRY="\033[37m"
CLR_DRK_GRY="\033[90m"
CLR_LIT_RED="\033[91m"
CLR_LIT_GRN="\033[92m"
CLR_LIT_YLW="\033[93m"
CLR_LIT_BLU="\033[94m"
CLR_LIT_MAG="\033[95m"
CLR_LIT_CYN="\033[96m"
CLR_WHT="\033[97m"
CLR_BKG_RESET="\033[49m"
CLR_BKG_BLK="\033[40m"
CLR_BKG_RED="\033[41m"
CLR_BKG_GRN="\033[42m"
CLR_BKG_YLW="\033[43m"
CLR_BKG_BLU="\033[44m"
CLR_BKG_MAG="\033[45m"
CLR_BKG_CYN="\033[46m"
CLR_BKG_LIT_GRY="\033[47m"
CLR_BKG_DRK_GRY="\033[100m"
CLR_BKG_LIT_RED="\033[101m"
CLR_BKG_LIT_GRN="\033[102m"
CLR_BKG_LIT_YLW="\033[103m"
CLR_BKG_LIT_BLU="\033[104m"
CLR_BKG_LIT_MAG="\033[105m"
CLR_BKG_LIT_CYN="\033[106m"
CLR_BKG_WHT="\033[107m"
RAW_RESET_ALL="\[\e[0m\]"
RAW_SET_BOLD="\[\e[1m\]"
RAW_SET_DIM="\[\e[2m\]"
RAW_SET_UNDERLINE="\[\e[4m\]"
RAW_SET_BLINK="\[\e[5m\]"
RAW_SET_INVERT="\[\e[7m\]"
RAW_SET_HIDDEN="\[\e[8m\]"
RAW_RESET_BOLD="\[\e[21m\]"
RAW_RESET_DIM="\[\e[22m\]"
RAW_RESET_UNDERLINE="\[\e[24m\]"
RAW_RESET_BLINK="\[\e[25m\]"
RAW_RESET_INVERT="\[\e[27m\]"
RAW_RESET_HIDDEN="\[\e[28m\]"
RAW_CLR_RESET="\[\e[39m\]"
RAW_CLR_BLK="\[\e[30m\]"
RAW_CLR_RED="\[\e[31m\]"
RAW_CLR_GRN="\[\e[32m\]"
RAW_CLR_YLW="\[\e[33m\]"
RAW_CLR_BLU="\[\e[34m\]"
RAW_CLR_MAG="\[\e[35m\]"
RAW_CLR_CYN="\[\e[36m\]"
RAW_CLR_LIT_GRY="\[\e[37m\]"
RAW_CLR_DRK_GRY="\[\e[90m\]"
RAW_CLR_LIT_RED="\[\e[91m\]"
RAW_CLR_LIT_GRN="\[\e[92m\]"
RAW_CLR_LIT_YLW="\[\e[93m\]"
RAW_CLR_LIT_BLU="\[\e[94m\]"
RAW_CLR_LIT_MAG="\[\e[95m\]"
RAW_CLR_LIT_CYN="\[\e[96m\]"
RAW_CLR_WHT="\[\e[97m\]"
RAW_CLR_BKG_RESET="\[\e[49m\]"
RAW_CLR_BKG_BLK="\[\e[40m\]"
RAW_CLR_BKG_RED="\[\e[41m\]"
RAW_CLR_BKG_GRN="\[\e[42m\]"
RAW_CLR_BKG_YLW="\[\e[43m\]"
RAW_CLR_BKG_BLU="\[\e[44m\]"
RAW_CLR_BKG_MAG="\[\e[45m\]"
RAW_CLR_BKG_CYN="\[\e[46m\]"
RAW_CLR_BKG_LIT_GRY="\[\e[47m\]"
RAW_CLR_BKG_DRK_GRY="\[\e[100m\]"
RAW_CLR_BKG_LIT_RED="\[\e[101m\]"
RAW_CLR_BKG_LIT_GRN="\[\e[102m\]"
RAW_CLR_BKG_LIT_YLW="\[\e[103m\]"
RAW_CLR_BKG_LIT_BLU="\[\e[104m\]"
RAW_CLR_BKG_LIT_MAG="\[\e[105m\]"
RAW_CLR_BKG_LIT_CYN="\[\e[106m\]"
RAW_CLR_BKG_WHT="\[\e[107m\]"


# ModalAI bash tweaks

# ubuntu ssh sets TERM to xterm-256color which screws with ROS
# change it to linux spec
export TERM=linux

HOME="/home/root"
. /share/modalai/git-prompt.sh

# let user know they are in cross and not desktop or voxl
#PS1="${SET_BOLD}${CLR_YLW}voxl-cross${RESET_ALL}:${SET_BOLD}${CLR_BLU}\w${RESET_ALL}${RAW_CLR_LIT_YLW}\$(__git_ps1 '(%s)')${RAW_RESET_ALL}\$ "
PS1="${RAW_SET_BOLD}${RAW_CLR_YLW}voxl-cross${RAW_RESET_ALL}:${RAW_SET_BOLD}${RAW_CLR_BLU}\w${RAW_RESET_ALL}${RAW_CLR_LIT_YLW}\$(__git_ps1 '(%s)')${RAW_RESET_ALL}\$ "

alias ls="ls --color"

LS_COLORS='rs=0:di=01;34:ln=01;36:mh=00:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:mi=00:su=37;41:sg=30;43:ca=30;41:tw=30;42:ow=34;42:st=37;44:ex=01;32:*.tar=01;31:*.tgz=01;31:*.ipk=01;31:*.arc=01;31:*.arj=01;31:*.taz=01;31:*.lha=01;31:*.lz4=01;31:*.lzh=01;31:*.lzma=01;31:*.tlz=01;31:*.txz=01;31:*.tzo=01;31:*.t7z=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.dz=01;31:*.gz=01;31:*.lrz=01;31:*.lz=01;31:*.lzo=01;31:*.xz=01;31:*.bz2=01;31:*.bz=01;31:*.tbz=01;31:*.tbz2=01;31:*.tz=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.war=01;31:*.ear=01;31:*.sar=01;31:*.rar=01;31:*.alz=01;31:*.ace=01;31:*.zoo=01;31:*.cpio=01;31:*.7z=01;31:*.rz=01;31:*.cab=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.svg=01;35:*.svgz=01;35:*.mng=01;35:*.pcx=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.m2v=01;35:*.mkv=01;35:*.webm=01;35:*.ogm=01;35:*.mp4=01;35:*.m4v=01;35:*.mp4v=01;35:*.vob=01;35:*.qt=01;35:*.nuv=01;35:*.wmv=01;35:*.asf=01;35:*.rm=01;35:*.rmvb=01;35:*.flc=01;35:*.avi=01;35:*.fli=01;35:*.flv=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.yuv=01;35:*.cgm=01;35:*.emf=01;35:*.ogv=01;35:*.ogx=01;35:*.aac=00;36:*.au=00;36:*.flac=00;36:*.m4a=00;36:*.mid=00;36:*.midi=00;36:*.mka=00;36:*.mp3=00;36:*.mpc=00;36:*.ogg=00;36:*.ra=00;36:*.wav=00;36:*.oga=00;36:*.opus=00;36:*.spx=00;36:*.xspf=00;36:'
export LS_COLORS

export PS1 OPIEDIR QPEDIR QTDIR EDITOR TERM

umask 022

